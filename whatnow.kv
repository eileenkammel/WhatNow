<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40
        Label:
            text: "WhatNow"
            font_size: 70
            color: 0, 2, 1, 1
        Widget:  # Pushes content down
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 130  # Adjust as needed for spacing
            spacing: 20
            Button:
                text: "Your activities"
                size_hint: None, None
                size: 200, 50
                pos_hint: {'center_x': 0.5}
                on_release: app.root.current = 'activities'
            Button:
                text: "Suggestion!"
                size_hint: None, None
                size: 200, 50
                pos_hint: {'center_x': 0.5}
                on_release: app.root.current = 'suggestion'
        Widget:  # Pushes content up

<ActivitiesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            Button:
                text: "Back"
                size_hint: None, None
                size: 100, 40
                on_release: app.root.current = 'home'
            Widget:  # Fills the rest of the row
        Label:
            text: "Your Activities"
            font_size: 60
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Digital Activities"
                    font_size: 18
                RecycleView:
                    id: digital_rv
                    viewclass: 'ActivityItem'
                    data: [{'text': activity, 'activity_type': 'digital', 'root_widget': root} for activity in root.digital_activities]
                    RecycleBoxLayout:
                        default_size: None, 40
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 50
                    TextInput:
                        id: digital_input
                        hint_text: "Add digital activity"
                        multiline: False
                        font_size: 22
                        size_hint_y: None
                        height: 50
                        on_text_validate: root.add_activity('digital', self.text); self.text = ''
                    Button:
                        text: "Add"
                        size_hint_x: None
                        width: 60
                        height: 50
                        on_release: root.add_activity('digital', digital_input.text); digital_input.text = ''
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Analogue Activities"
                    font_size: 18
                RecycleView:
                    id: analogue_rv
                    viewclass: 'ActivityItem'
                    data: [{'text': activity, 'activity_type': 'analogue', 'root_widget': root} for activity in root.analogue_activities]
                    RecycleBoxLayout:
                        default_size: None, 40
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 60
                    TextInput:
                        id: analogue_input
                        hint_text: "Add analogue activity"
                        multiline: False
                        font_size: 22
                        size_hint_y: None
                        height: 50
                        on_text_validate: root.add_activity('analogue', self.text); self.text = ''
                    Button:
                        text: "Add"
                        size_hint_x: None
                        width: 60
                        height: 50
                        on_release: root.add_activity('analogue', analogue_input.text); analogue_input.text = ''

<ActivityItem@BoxLayout>:
    text: ''
    activity_type: ''
    root_widget: None
    size_hint_y: None
    height: 40
    Label:
        text: root.text
    Button:
        text: "Delete"
        size_hint_x: None
        width: 70
        on_release: root.root_widget.remove_activity(root.activity_type, root.text)

<SuggestionScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            Button:
                text: "Back"
                size_hint: None, None
                size: 100, 40
                on_release: app.root.current = 'home'
            Widget:
        Label:
            text: "What to do?"
            font_size: 60
        Label:
            text: root.suggestion
            font_size: 70
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Digital Activity"
                on_release: root.suggest('digital')
            Button:
                text: "Analogue Activity"
                on_release: root.suggest('analogue')