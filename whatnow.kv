                                radius: 20,
                    Button:
                        background_color: (0,0,0,0)
                        text: "+"
                        color: 0, 1, 255, 1
                        font_size: dp(36)
                        size_hint_y: 0.5
                        size_hint_x: 0.1
                        on_release: root.add_activity('analogue', analogue_input.text); analogue_input.text = ''
        # Second row of activity columns
